<LinearLayout
    android:id="@+id/icons_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fa_image="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:inputType="text"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/fa_search"/>

    <TextView
        android:id="@+id/txt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fa_area_chart"
        android:textColor="#1b5eb6"
        android:textSize="45sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fa_pie_chart"
        android:textColor="#09e756"
        android:textSize="45sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textColor="#9b59b6"
        android:textSize="45sp"/>

    <ImageView
        android:id="@+id/img_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <originally.us.fontawesomeandroid.AwesomeText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textSize="45sp"/>

    <originally.us.fontawesomeandroid.AwesomeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textSize="45sp"/>

    <originally.us.fontawesomeandroid.AwesomeImage
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        fa_image:fa_color="@color/colorAccent"
        fa_image:fa_icon="@string/fa_line_chart"
        />

</LinearLayout>