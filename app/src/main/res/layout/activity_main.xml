<LinearLayout
    android:id="@+id/icons_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fa_image="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/fa_area_chart"
        android:textColor="#1b5eb6"
        android:textSize="45sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/fa_pie_chart"
        android:textColor="#09e756"
        android:textSize="45sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textColor="#9b59b6"
        android:textSize="45sp"/>

    <ImageView
        android:id="@+id/img_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"/>

    <originally.us.fontawesomeandroid.AwesomeText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textSize="45sp"/>

    <originally.us.fontawesomeandroid.AwesomeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/fa_line_chart"
        android:textSize="45sp"/>

    <originally.us.fontawesomeandroid.AwesomeImage
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        fa_image:fa_color="@color/colorAccent"
        fa_image:fa_icon="@string/fa_line_chart"
        />

</LinearLayout>